<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - B2B Portalı</title>

    <!-- CSS dosyalarına versiyon ekleyin -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Preload önemli kaynaklar -->
    <link rel="preload" href="~/css/site.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="~/css/site.css"></noscript>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        var kullaniciId = Context.Session.GetInt32("KullaniciID");
        var isLoginPage = Context.Request.Path.Value?.ToLower().Contains("login") ?? false;
        var isAuthenticated = kullaniciId.HasValue;
    }

    @if (isAuthenticated && !isLoginPage)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-building me-2"></i>B2B PORTAL
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                   asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-1"></i> Ana Sayfa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Urun" asp-action="Index">
                                    <i class="fas fa-boxes me-1"></i> Ürünler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="Index">
                                    <i class="fas fa-clipboard-list me-1"></i> Siparişlerim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Finance" asp-action="AccountStatement">
                                    <i class="fas fa-file-invoice-dollar me-1"></i> Cari Ekstre
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i> Profilim
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Ayarlar</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AccountController" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main class="@(isAuthenticated ? "container mt-4" : "container-fluid")">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>