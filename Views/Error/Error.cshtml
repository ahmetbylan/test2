@{
    ViewData["Title"] = "Hata";
    Layout = "_Layout"; // Layout dosyanızın adına göre ayarlayın
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="alert alert-warning" role="alert">
                <h1 class="display-1"><i class="fas fa-bug"></i> Hata</h1>
                <h2 class="display-4">Bir hata oluştu</h2>
                <p class="lead">İşleminiz sırasında beklenmedik bir hata oluştu.</p>
                <hr>
                @if (ViewBag.ErrorMessage != null)
                {
                    <p class="text-monospace">@ViewBag.ErrorMessage</p>
                }
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                    <i class="fas fa-home"></i> Ana Sayfaya Dön
                </a>
                <button onclick="history.back()" class="btn btn-secondary mt-3">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </button>
            </div>
        </div>
    </div>
</div>